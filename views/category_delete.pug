extends layout 

block content 
  h2 #{title}: #{category.name} 

  if items_in_category.length 
    p #[strong Delete the following items before attempting to delete this category.]

    h3 Items
    ul.clickable
      for item in items_in_category
        a.m-l-16.link(href=item.url) #{item.name} (#{item.number_in_stock} in stock)

  else
    form(method='post')
      p Are you sure you want to delete this category?

      input#categoryid(type="hidden" name='categoryid' value=category._id)
      button.btn-submit(type='submit') Delete