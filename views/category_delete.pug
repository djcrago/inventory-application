extends layout 

block content 
  h2 #{title}: #{category.name} 

  if items_in_category.length 
    p #[strong Delete the following books before attempting to delete this category.]

    h3 Items
    div
      dl.m-l-16.item-list-item
        each item in items_in_category 
          dt 
            a(href=item.url) #{item.name} 
          dd #{item.description} 

  else
    form(method='post')
      p Are you sure you want to delete this category?

      input#categoryid(type="hidden" name='categoryid' value=category._id)
      button.btn-submit(type='submit') Delete