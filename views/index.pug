extends layout

block content
  h2= title

  h3 #[strong Stats at a glance]

  p.m-l-16 Total Number of Items: !{all_items}
  p.m-l-16 Total Number of Categories: !{all_categories.length}

  h3 Categories
    
  ul.categoriesHome
    for category in all_categories
      a.m-l-16.link(href=`/inventory/category/${category.name}`) #{category.name}: #{category.item_count} items
